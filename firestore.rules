rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // Conversations
      match /conversations/{conversationId=**} {
        allow read, write: if request.auth.uid == userId;
      }

      // Notes
      match /notes/{noteId=**} {
        allow read, write: if request.auth.uid == userId;
      }

      // Actions
      match /actions/{actionId=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}